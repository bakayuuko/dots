! rofi
!! rofi
rofi.lines                      : 2
rofi.color-enabled              : true
rofi.separator-style            : none 
rofi.width                      : 33
rofi.line-padding               : 6
rofi.columns                    : 2
rofi.fixed-num-lines            : true
rofi.hide-scrollbar             : true
rofi.terminal                   : urxvtc

! urxvt
!! fonts
URxvt.font                      : xft:FuraCode\ Nerd\ Font\ Mono:style=Medium:size=9, xft:TakaoMincho:size=9:hintstyle=hintnone, xft:Symbola:pixelsize:15
URxvt.boldFont                  : xft:FuraCode\ Nerd\ Font\ Mono:bold:size=9, xft:TakaoMincho:bold:size=9:hintstyle=hintnone, xft:Symbola:pixelsize:15
URxvt.letterSpace               : 0.5
Xft.dpi                         : 96
Xft.autohint                    : false
Xft.antialias                   : true
Xft.hinting                     : true
Xft.hintstyle                   : hintslight
Xft.rgba                        : rgb
Xft.lcdfilter                   : lcddefault

!! window 
URxvt.title                     : term
URxvt.termName                  : rxvt-unicode-256color
URxvt*scrollTtyOutput           : false
URxvt*scrollWithBuffer          : true
URxvt*scrollTtyKeypress         : true
URxvt.scrollBar                 : false
URxvt.scrollBar_right           : false
URxvt.scrollBar_floating        : false
URxvt.scrollstyle               : rxvt
URxvt.cursorBlink               : true
URxvt.cursorUnderline           : true

!! terminal padding
URxvt.internalBorder            : 15
URxvt.externalBorder            : 15
URxvt.depth                     : 32

!! perl extensions
URxvt.perl-lib                  : ~/.urxvt/ext/
URxvt.perl-ext-common           : resize-font,ibeamcursor,leavecursor
URxvt.keysym.C-minus            : resize-font:smaller
URxvt.keysym.C-equal            : resize-font:bigger
URxvt.keysym.C-0                : resize-font:reset
URxvt.keysym.C-question         : resize-font:show
!URxvt.perl-ext-common           : default,clipboard,url-select,keyboard-select,fullscreen

!! url handling
URxvt.url-launcher              : opera
URxvt.matcher.button            : 1
URxvt.underlineURLs             : true
URxvt.urlButton                 : 1 

!! keybinding
!fix keyboard error in urxvt+zsh
URxvt.keysym.Home               : \033[1~
URxvt.keysym.End                : \033[4~
URxvt.keysym.KP_Home            : \033[1~
URxvt.keysym.KP_End             : \033[4~
URxvt.keysym.Control-Up         : \033[1;5A
URxvt.keysym.Control-Down       : \033[1;5B
URxvt.keysym.Control-Left       : \033[1;5D
URxvt.keysym.Control-Right      : \033[1;5C
! copy and paste in urxvt
URxvt.keysym.Control-Alt-C      : perl:clipboard:copy
URxvt.keysym.Control-Alt-V      : perl:clipboard:paste
! Fullscreen switch
URxvt.keysym.F11                : perl:fullscreen:switch

!! Others
URxvt.iso14755                  : false
URxvt.iso14755_52               : false

!Xterm
!! Xterm setting
XTerm.termName                  : xterm-256color
XTerm.vt100.locale              : true
XTerm.vt100.metaSendsEscape     : true
XTerm.vt100.backarrowKey        : false
XTerm.ttyModes                  : erase ^?

!! font
XTerm.vt100.faceName            : FuraCode\ Nerd\ Font\ Mono:size=11:medium
! start with TrueType fonts enable
XTerm.vt100.renderFont          : true
XTerm.scaleHeight               : 1
