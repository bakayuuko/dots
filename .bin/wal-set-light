#!/usr/bin/env bash
#
# Script to set colors generated by 'wal'
# https://github.com/dylanaraps/wal

# Source generated colors.
. "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst && \
        dunst \
            -padding 16 \
            -alignment center\
            -lb "$color0" \
            -nb "$color0" \
            -cb "$color0" \
            -lf "$color15"  \
            -bf "$color15"  \
            -cf "$color15"  \
            -nf "$color15"  \
            -fn "${DUNST_FONT:-Misc Termsyn 12}" \
            -geometry "${DUNST_SIZES:-250x30-20+30}" &
}

set_zathura() {
    cp ~/.cache/wal/zathurarc ~/.config/zathura/zathurarc
}

set_openbox() {
    cp ~/.cache/wal/thicc-themerc ~/.themes/thicc/openbox-3/themerc
    openbox --restart
}

main() {
    reload_dunst &
    set_zathura &
    #oomox-materia-cli -o nanolab ~/.cache/wal/colors-oomox &
    oomox-archdroid-icons-cli -o nanolab ~/.cache/wal/colors-oomox &
    set_openbox &
    sleep 1
}

main >/dev/null 2>&1
